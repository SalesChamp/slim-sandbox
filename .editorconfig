root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{js,hbs,less,es6,php,phpt,handlebars}]
indent_style = tab
indent_size = 4

[*.{neon}]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[{.bowerrc,package.json}]
indent_style = space
indent_size = 2
